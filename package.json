{
  "private": true,
  "name": "vim-help",
  "description": "Vim built-in documentation, made nicer to read.",
  "version": "0.0.1",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheap-glitch/vim-help.git"
  },
  "bugs": {
    "url": "https://github.com/cheap-glitch/vim-help/issues"
  },
  "author": "cheap glitch <cheap.glitch@gmail.com> (https://github.com/cheap-glitch)",
  "homepage": "https://github.com/cheap-glitch/vim-help#readme",
  "main": "build.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production run-s 'build:*'",
    "build:css": "node build.js css",
    "build:html": "run-s lint test && node build.js html",
    "build:js": "node build.js js",
    "coverage": "nyc npm run test",
    "lint": "eslint '**/*.js'",
    "local-server": "ws --config-file .lws.config.js",
    "serve": "run-p local-server 'serve:*'",
    "serve:css": "nodemon --watch src/styles --ext css --exec npm run build:css",
    "serve:html": "nodemon --watch build.js --watch src --watch test --ext html,js --exec npm run build:html",
    "serve:js": "nodemon --watch src/scripts --exec npm run build:js",
    "test": "mocha"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.5",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-plugin-smarter-tabs": "^1.1.0",
    "html-minifier": "^4.0.0",
    "klaw-sync": "^6.0.0",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "postcss-cli": "^7.1.0",
    "prismjs": "^1.19.0",
    "rimraf": "^3.0.2",
    "terser": "^4.6.7"
  }
}
