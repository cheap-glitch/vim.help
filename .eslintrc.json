{
	"extends": "eslint:recommended",

	"plugins": [
		"smarter-tabs"
	],

	"parserOptions": {
		"ecmaVersion": 2018
	},

	"env": {
		"node": true
	},

	"rules": {
		"no-mixed-spaces-and-tabs":   ["warn", "smart-tabs"],
		"smarter-tabs/smarter-tabs":  "warn"
	},

  "ignorePatterns": ["public/"],

	"overrides": [{
		"files": ["test/*.test.js", "tests/unit/*.spec.js"],
		"env": {
			"mocha": true
		}
	}]
}
